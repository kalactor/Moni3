#!/bin/bash

# Handle click events
case "$BLOCK_BUTTON" in
    1) pamixer --toggle-mute ;;
    3) pavucontrol & ;;
    4) pamixer --increase 5 ;;
    5) pamixer --decrease 5 ;;
esac

# Get volume info
volume=$(pamixer --get-volume)
muted=$(pamixer --get-mute)

# Nerd Font icons
if [ "$muted" = "true" ]; then
    icon=""   # nf-fa-volume_off
elif [ "$volume" -ge 70 ]; then
    icon=""   # nf-fa-volume_up
elif [ "$volume" -ge 30 ]; then
    icon=""   # nf-fa-volume_down
else
    icon=""   # nf-fa-volume_low
fi

# Output icon and volume
echo "$icon $volume%"

